<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.exercicetp6.controller.UserListController"
            prefHeight="550.0" prefWidth="800.0"
            style="-fx-background-color: #f9f9f9;">

    <!-- Header -->
    <top>
        <VBox alignment="CENTER" spacing="8">
            <padding>
                <Insets top="20" right="30" bottom="15" left="30"/>
            </padding>
            <Label text="User Management"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <Button fx:id="addUserButton" text="Add New User"
                    onAction="#addUser"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-padding: 8 20;
                           -fx-background-radius: 6;" />
        </VBox>
    </top>

    <!-- Left Panel: List -->
    <left>
        <VBox spacing="12">
            <padding>
                <Insets top="15" right="10" bottom="15" left="20"/>
            </padding>

            <Label text="User List"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />

            <ListView fx:id="userListView" prefWidth="220" prefHeight="380"
                      style="-fx-border-color: #dcdcdc; -fx-background-radius: 4;" />
        </VBox>
    </left>

    <!-- Main Content: Table -->
    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="15" right="30" bottom="20" left="10"/>
            </padding>

            <Label text="User Details"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />

            <TableView fx:id="userTableView" prefHeight="380" style="-fx-border-color: #dcdcdc;">
                <columns>
                    <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="140"/>
                    <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="140"/>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="130"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
